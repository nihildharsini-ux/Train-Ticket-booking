#servlet code
package com.Booking;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.*;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

@WebServlet("/BookingServlet")
public class BookingServlet extends HttpServlet {

    private Connection conn;

    public void init() throws ServletException {
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            conn = DriverManager.getConnection(
                "jdbc:mysql://localhost:3306/trainDB", "root", "nihil0909"
            );
        } catch (Exception e) {
            throw new ServletException("DB Connection error: " + e.getMessage());
        }
    }

    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        String name = request.getParameter("name");
        String source = request.getParameter("source");
        String destination = request.getParameter("destination");
        String travelDate = request.getParameter("travel_date");

        try {
            String sql = "INSERT INTO tickets(name, source, destination, travel_date) VALUES (?, ?, ?, ?)";
            PreparedStatement ps = conn.prepareStatement(sql);
            ps.setString(1, name);
            ps.setString(2, source);
            ps.setString(3, destination);
            ps.setDate(4, Date.valueOf(travelDate));
            ps.executeUpdate();

            response.sendRedirect("viewTicket.jsp"); // Redirect to viewTicket.jsp
        } catch (SQLException e) {
            throw new ServletException("Error inserting ticket: " + e.getMessage());
        }
    }

    public void destroy() {
        try {
            if (conn != null) conn.close();
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
}


#booking.jsp
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <title>Train Ticket Booking</title>
</head>
<body>
    <h2>Train Ticket Booking</h2>
    <form action="BookingServlet" method="post">
        Name: <input type="text" name="name" required><br><br>
        Source: <input type="text" name="source" required><br><br>
        Destination: <input type="text" name="destination" required><br><br>
        Travel Date: <input type="date" name="travel_date" required><br><br>
        <input type="submit" value="Book Ticket">
    </form>
</body>
</html>


